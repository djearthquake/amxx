/*Simple way to RTV with the missing RTV on existing Amxx base system*/

#include amxmodx
#include amxmisc

public plugin_init()
{
    register_plugin("Simpler RTV", "1.21", "SPiNX") && register_clcmd("say rtv","handlesay")
    //g_mp_trick = get_cvar_pointer("mp_maxrounds") ? get_cvar_pointer("mp_maxrounds") : register_cvar("mp_maxrounds","")
}
public handlesay(id)
{
    if(is_user_admin(id) && get_user_frags(id) > 2 || get_user_frags(id) > 6)
    {
        callfunc_begin("cmdVoteMapMenu","mapsmenu.amxx")
        callfunc_end()
    }
    else if(is_user_admin(id) && get_user_frags(id) >= 1 || get_user_frags(id) >= 1 && get_user_frags(id) <= 6)
    {
        callfunc_begin("@rtv","mapchooser.amxx")
        callfunc_push_int(id)
        callfunc_end()
    }

}

